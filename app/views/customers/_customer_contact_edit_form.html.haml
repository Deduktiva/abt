-# Customer contact edit form
= form_with model: contact, local: false, data: { turbo_frame: "customer_contact_#{contact.id}" } do |f|
  %tr{style: 'vertical-align: middle; background-color: #f8f9fa;'}
    %td{style: 'padding: 0.5rem 0.75rem;'}
      = f.text_field :name, class: "form-control form-control-sm", required: true
    %td{style: 'padding: 0.5rem 0.75rem;'}
      = f.email_field :email, class: "form-control form-control-sm", required: true
    %td{style: 'padding: 0.5rem 0.75rem;'}
      .form-check
        = f.check_box :receives_invoices, class: "form-check-input"
        = f.label :receives_invoices, "Invoices", class: "form-check-label"
    %td{style: 'padding: 0.5rem 0.75rem;'}
      %small.text-muted Project editing coming soon
    %td.text-center{style: 'padding: 0.5rem 0.75rem;'}
      .d-flex.gap-1.justify-content-center
        = f.submit "üíæ", class: "btn btn-success btn-sm", title: "Save"
        = link_to "‚ùå", cancel_edit_customer_contact_path(contact, format: :turbo_stream),
          class: "btn btn-secondary btn-sm",
          title: "Cancel",
          data: { turbo_frame: "customer_contact_#{contact.id}" }