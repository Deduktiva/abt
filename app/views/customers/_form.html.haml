= form_for @customer do |f|
  - if @customer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@customer.errors.count, "error")} prohibited this customer from being saved:"
      %ul
        - @customer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :matchcode
    = f.text_field :matchcode
  .field
    = f.label :name
    = f.text_area :name, :rows => 2
  .field
    = f.label :address
    = f.text_area :address, :rows => 5
  .field
    = f.label :time_budget
    = f.text_field :time_budget
    hours
  .field
    = f.label :notes
    = f.text_area :notes, :rows => 5
  .actions
    = f.submit 'Save'
