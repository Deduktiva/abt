= page_header_with_new_button('Listing customers', new_customer_path)

.mb-3
  .customer-filter
    %nav{"aria-label" => "Customer status filter"}
      %ul.pagination.pagination-sm.justify-content-start
        %li.page-item{class: (params[:filter].blank? ? 'active' : '')}
          = link_to 'All', customers_path, class: 'page-link'
        %li.page-item{class: (params[:filter] == 'active' ? 'active' : '')}
          = link_to 'Active', customers_path(filter: 'active'), class: 'page-link'
        %li.page-item{class: (params[:filter] == 'inactive' ? 'active' : '')}
          = link_to 'Inactive', customers_path(filter: 'inactive'), class: 'page-link'

%table.table.table-striped.table-sm
  %tr
    %th Matchcode
    %th Name
    %th Status
    %th Time budget
    %th{:width => "3%"}
    %th{:width => "3%"}
    %th{:width => "3%"}

  - @customers.each do |customer|
    %tr{class: customer.active? ? '' : 'table-secondary'}
      %td= customer.matchcode
      %td= customer.name
      %td
        - if customer.active?
          %span.badge.bg-success Active
        - else
          %span.badge.bg-secondary Inactive
      %td= customer.time_budget
      %td= list_action_link('Show', customer, :show)
      %td= list_action_link('Edit', edit_customer_path(customer), :edit)
      %td
        - if customer.used_in_invoices?
          %span.text-muted.small{title: "Cannot delete - customer used in invoices"} Used
        - else
          = destroy_link(customer, "Are you sure you want to delete customer \"#{customer.matchcode}\" (#{customer.name})?")

