    Order: #{delivery_note.cust_order}
  - if delivery_note.cust_reference.present?
    Reference: #{delivery_note.cust_reference}
  - if delivery_note.delivery_timeframe.present?
    Delivery Period: #{delivery_note.delivery_timeframe}
\
