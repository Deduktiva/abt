.fieldset
= simple_form_for(@product, :validation => true, :html => {:class => 'form-horizontal'}) do |f|
  = f.error_notification

  .form-inputs
    .row.mb-3
      = f.label :title, class: 'col-sm-3 col-form-label'
      .col-sm-9
        = f.text_field :title, {:class => 'form-control', :required => true}
    .row.mb-3
      = f.label :description, class: 'col-sm-3 col-form-label'
      .col-sm-9
        = f.text_area :description, {:class => 'form-control', :rows => 4}
    .row.mb-3
      = f.label :rate, class: 'col-sm-3 col-form-label'
      .col-sm-9
        = f.number_field :rate, {:class => 'form-control', :required => true}
    .row.mb-3
      = f.label :sales_tax_product_class_id, class: 'col-sm-3 col-form-label'
      .col-sm-9
        = f.collection_select :sales_tax_product_class_id, SalesTaxProductClass.all, :id, :name, { prompt: 'Select tax class...' }, {:class => 'form-select', :required => true}

  %br

  = action_buttons_wrapper do
    = f.button :submit, :class => 'btn btn-primary'
    = cancel_button(@product)
