= page_header_with_new_button('Listing products', new_product_path)

%table.table.table-striped.table-sm
  %tr
    %th Title
    %th Rate
    %th Product Class
    %th{width: "3%"}
    %th{width: "3%"}
    %th{width: "3%"}

  - @products.each do |product|
    %tr
      %td= product.title
      %td= format_currency(product.rate)
      %td= product.sales_tax_product_class && product.sales_tax_product_class.name
      %td= link_to 'Show', product
      %td= link_to 'Edit', edit_product_path(product)
      %td= link_to 'Destroy', product, data: { 'turbo-method': 'delete', 'turbo-confirm': "Are you sure you want to delete product \"#{product.title}\"?" }

