.fieldset
= simple_form_for(@project, :validation => true, :html => {:class => 'form-horizontal'}) do |f|
  = f.error_notification

  .form-inputs
    .row.mb-3
      = f.label :matchcode, class: 'col-sm-3 col-form-label'
      .col-sm-9
        = f.text_field :matchcode, :class => 'form-control'
    .row.mb-3
      = f.label :description, class: 'col-sm-3 col-form-label'
      .col-sm-9
        = f.text_area :description, :class => 'form-control', :rows => 3
    .row.mb-3
      = f.label :time_budget, class: 'col-sm-3 col-form-label'
      .col-sm-9
        = f.text_field :time_budget, :class => 'form-control'
    .row.mb-3
      = f.label :bill_to_customer_id, class: 'col-sm-3 col-form-label'
      .col-sm-9
        = f.collection_select :bill_to_customer_id, Customer.all, :id, :name, { prompt: 'Select customer...' }, {:class => 'form-select'}
    .row.mb-3
      = f.label :active, class: 'col-sm-3 col-form-label'
      .col-sm-9
        .form-check
          = f.check_box :active, :class => 'form-check-input'
          = f.label :active, 'Active', class: 'form-check-label'

  %br

  = action_buttons_wrapper do
    = f.button :submit, :class => 'btn btn-primary'
    = cancel_button(@project)
