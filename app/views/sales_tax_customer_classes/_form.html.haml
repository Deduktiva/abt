= simple_form_for(@sales_tax_customer_class, :validation => true, :html => {:class => 'form-horizontal'}) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name, :placeholder => "National"
    = f.input :invoice_note, :hint => "Appears on every invoice.", :input_html => { :class => "span6", :rows => 3 }

  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to 'Cancel', sales_tax_customer_classes_path, :class => "btn btn-danger"
