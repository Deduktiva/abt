= page_header_with_new_button('Listing Sales Tax Customer Classes', new_sales_tax_customer_class_path)

%table.table.table-striped.table-sm
  %tr
    %th Name
    %th Invoice note
    %th{:width => "3%"}
    %th{:width => "3%"}

  - @sales_tax_customer_classes.each do |sales_tax_customer_class|
    %tr
      %td= sales_tax_customer_class.name
      %td= sales_tax_customer_class.invoice_note
      %td= link_to 'Edit', edit_sales_tax_customer_class_path(sales_tax_customer_class)
      %td= link_to 'Destroy', sales_tax_customer_class, data: { 'turbo-method': 'delete', 'turbo-confirm': "Are you sure you want to delete customer class \"#{sales_tax_customer_class.name}\"?" }

