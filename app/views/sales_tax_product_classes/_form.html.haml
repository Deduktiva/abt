= simple_form_for(@sales_tax_product_class, :validation => true, :html => {:class => "form-horizontal"}) do |f|
  - if @sales_tax_product_class.errors.any?
    .alert.alert-danger
      %h4
        = pluralize(@sales_tax_product_class.errors.count, 'error')
        prohibited saving:
      %ul
        - @sales_tax_product_class.errors.full_messages.each do |msg|
          %li= msg

  .form-inputs
    .row.mb-3
      = f.label :name, class: 'col-sm-3 col-form-label'
      .col-sm-9
        = f.text_field :name, :class => 'form-control', :placeholder => "Standard goods"
    .row.mb-3
      = f.label :indicator_code, class: 'col-sm-3 col-form-label'
      .col-sm-9
        = f.text_field :indicator_code, :class => 'form-control', :placeholder => "A"

  %br

  = action_buttons_wrapper do
    = f.button :submit, :class => 'btn btn-primary'
    = cancel_button(@sales_tax_product_class)
