= page_header_with_new_button('Listing Sales Tax Product Classes', new_sales_tax_product_class_path)

%table.table.table-striped.table-sm
  %tr
    %th Name
    %th Indicator code
    %th{:width => "3%"}
    %th{:width => "3%"}

  - @sales_tax_product_classes.each do |sales_tax_product_class|
    %tr
      %td= sales_tax_product_class.name
      %td= sales_tax_product_class.indicator_code
      %td= link_to 'Edit', edit_sales_tax_product_class_path(sales_tax_product_class)
      %td= link_to 'Destroy', sales_tax_product_class, data: { 'turbo-method': 'delete', 'turbo-confirm': "Are you sure you want to delete product class \"#{sales_tax_product_class.name}\"?" }

